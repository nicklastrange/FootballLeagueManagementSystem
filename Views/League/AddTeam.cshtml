@model FootballLeagueManagementSystem.Controllers.IdWithTeam

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add team to the league</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="team.Name"></label>
            <input asp-for="team.Name" class="form-control"/>
            <span asp-validation-for="team.Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Add</button>
        <a asp-controller="League" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back</a>
    </div>
</form>
