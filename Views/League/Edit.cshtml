@model League

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit League</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br/>
        <div class="row pb-2">
            <h2 class="text-primary">Edit Teams in League</h2>
            <hr/>
        </div>
        @for (int i=0; i<Model.TeamList.Count; i++)
        {
            <div class="mb-3">
                <label asp-for="TeamList[i].Name"></label>
                <input asp-for="TeamList[i].Name" class="form-control"/>
                <span asp-validation-for="TeamList[i].Name" class="text-danger"></span>
            </div>
        }
        <button type="submit" class="btn btn-primary" style="width: 150px">Apply</button>
        <a asp-controller="League" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back</a>
    </div>
</form>
